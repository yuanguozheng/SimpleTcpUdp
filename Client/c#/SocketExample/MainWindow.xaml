<Window x:Class="SocketExample.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Main" Height="245" Width="265" ResizeMode="CanMinimize">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Button x:Name="sTCP" Content="TCP 客户端演示"  Width="120" HorizontalAlignment="Center" VerticalAlignment="Center" Height="40" Click="sTCP_Click"/>
        <Button x:Name="sUDP" Content="UDP 客户端演示"  Grid.Row="1"  Width="120" HorizontalAlignment="Center" VerticalAlignment="Center" Height="40" Click="sUDP_Click"/>

    </Grid>
</Window>
